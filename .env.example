# =============================================
# Configuration Backend - Bismillah App
# =============================================
# Copiez ce fichier en .env et remplissez les valeurs

# ---- Base de données ----
DB_HOST=127.0.0.1
DB_NAME=bismillah_app
DB_USER=root
DB_PASSWORD=your_password
DB_NAME_TEST=bismillah_app_test

# ---- Serveur ----
PORT=5000
NODE_ENV=development

# ---- Authentification ----
JWT_SECRET=votre_secret_jwt_tres_long_et_securise_32_caracteres_minimum
JWT_RESET_SECRET=autre_secret_pour_reset_password

# ---- Email (Production - Brevo) ----
# Laissez vide en développement pour utiliser Ethereal
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=votre_email_brevo@example.com
SMTP_PASS=votre_cle_api_smtp_brevo
EMAIL_FROM="Bismillah App" <noreply@bismillah-app.com>

# ---- URLs ----
FRONTEND_URL=http://localhost:5173
# En production: https://votre-app.up.railway.app
